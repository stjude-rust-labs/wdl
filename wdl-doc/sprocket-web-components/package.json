{
  "name": "sprocket-code-wc-bundle",
  "version": "1.0.0",
  "description": "A bundled sprocket-code web component.",
  "main": "dist/bundle.js",
  "module": "dist/bundle.js",
  "type": "module",
  "scripts": {
    "dev": "esbuild index.js --bundle --outfile=../theme/assets/index.js --format=esm --loader:.json=json --watch",
    "build": "esbuild index.js --bundle --outfile=../theme/assets/index.js --format=esm --minify --loader:.json=json --metafile=dist/meta.json",
    "build:lazy": "esbuild index.js --bundle --outdir=../theme/assets --format=esm --splitting --minify --loader:.json=json --metafile=dist/meta.json",
    "analyze:meta": "esbuild-visualizer --metafile dist/meta.json --open",
    "analyze:sme": "source-map-explorer dist/bundle.js dist/bundle.js.map"
  },
  "dependencies": {
    "tippy.js": "^6.3.7",
    "shiki": "^1.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "esbuild-visualizer": "^0.7.0",
    "source-map-explorer": "^2.5.0"
  }
}
